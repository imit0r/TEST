<h2 class="text-center mt-4 text-white" ><%= @article.title %></h2>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow lg mb-5 bg-body-tertiary rounded">
                <div class="card-header fst-italic">
                    by imit0r 
                </div>
                <div class="card-body">
                    <div class="card-text"><%= simple_format(@article.description) %></div>
                    <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(@article), class:"btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-body-secondary">
                    <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                    edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
</div>
